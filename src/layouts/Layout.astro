---
import "../styles/style.scss";
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}/favicon.ico`} />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <script is:inline src={`${import.meta.env.BASE_URL}/js/three.min.js`}></script>
        <script is:inline src={`${import.meta.env.BASE_URL}/js/imagesloaded.pkgd.min.js`}></script>
        <script is:inline src={`${import.meta.env.BASE_URL}/js/OBJLoader.js`}></script>
        <script is:inline src={`${import.meta.env.BASE_URL}/js/gsap.min.js`}></script>
        <script is:inline src={`${import.meta.env.BASE_URL}/js/ScrollTrigger.min.js`}></script>
        <script is:inline src={`${import.meta.env.BASE_URL}/js/DrawSVGPlugin3.min.js`}></script>
        <script is:inline src={`${import.meta.env.BASE_URL}/js/locomotive-scroll.min.js`}></script>

    </head>
    <body>
        <slot />
        <script src="../scripts/main.js"></script>
    </body>
</html>
<style is:global lang="scss">
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
</style>
