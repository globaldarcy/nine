<script>
    import $ from "jquery";
    $.ajax({
        type: "get",
        url: "/main",
        dataType: "html",
        success: function (data) {
            console.log(typeof data);
            const parser = new DOMParser();
            const htmlDocument = parser.parseFromString(data, "text/html");

            // 获取指定的 DOM 节点
            const targetNode = htmlDocument.querySelector(".s-exp");
            console.log(targetNode);
            const currentNode =  document.querySelector(".n-explore");

            const siteOne = document.querySelector(".link-n");
            siteOne.addEventListener("click", function () {
                currentNode.parentNode.replaceChild(targetNode, currentNode);
            });
